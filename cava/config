[general]

; framerate = 60
; autosens = 1 # 0/1 = true/false
; overshoot = 20
; sensitivity = 100

; bars = 0 # Auto
bar_width = 1
bar_spacing = 1

[input]

; method = pipewire
; source = auto
; sample_rate = 44100
; sample_bits = 16

[output]

# Output method. Can be 'ncurses', 'noncurses', 'raw', 'noritake', 'sdl' or 'sdl_glsl'.
; method = noncurses

# Orientation of the visualization. Can be 'bottom', 'top', 'left', 'right' or 'horizontal'.
; orientation = bottom

# Visual channels. Can be 'stereo' or 'mono'.
# set 'reverse' to 1 to display frequencies the other way around.
; channels = stereo
; mono_option = average
; reverse = 0

# Raw data format. Can be 'binary' or 'ascii'.
; data_format = binary

# Shaders for sdl_glsl, located in $HOME/.config/cava/shaders
; vertex_shader = pass_through.vert
; fragment_shader = bar_spectrum.frag


# show a flat bar at the bottom of the screen when idle, 1 = on, 0 = off
show_idle_bar_heads = 1

# show waveform instead of frequency spectrum, 1 = on, 0 = off
; waveform = 0

[color]

# catppucin mocha, comment out background for transparency
; background = '#1e1e2e'

gradient = 1

gradient_color_1 = '#94e2d5'
